<p id="notice"><%= notice %></p>

<h3> Items in your gaming cart: </h3>

<table border="1">
	<% @cart.lineitems.each do |item| %>
		<tr>
			<td>  <%= item.quantity %> </td>
			<td>  <%= item.product.name %> </td>
			<td class="item_price"> <%= item.quantity %>*<b><%= item.product.price %> </td>
		</tr>
		<% end %>
		<tr class="total_price">
			<th colspan="2"> Total </th>
			<th class="total_cell"> $<%= @cart.total_price%> </th>
		</tr>
</table>
<br>
<%= button_to 'Check Out', new_order_path, method: :get %>
<br>	
<%= button_to 'Empty Cart', @cart, method: :delete, data: {confirm: 'Are you sure?'}, remote: true %>	 